<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Platform Reports - Railway Management System</title>
    <link rel="stylesheet" href="/styles/admin.css" />
    <style>
      /* Apply full height to html and body */
      html,
      body {
        height: 100%;
        margin: 0;
      }

      /* Flex container to allow flexible content positioning */
      body {
        display: flex;
        flex-direction: column; /* Arrange children (header, main, footer) in a column */
      }

      /* Main content area grows to take remaining space */
      main {
        flex: 1; /* This makes the main content take up all available space */
        padding: 20px;
      }

      /* Footer styling */
      footer {
        background-color: #2c3e50;
        color: white;
        text-align: center;
        padding: 10px 0;
        position: relative;
        bottom: 0;
        width: 100%;
      }
    </style>
  </head>
  <body>
    <header>
      <div class="header-container">
        <h1><i class="fas fa-chart-line"></i> Platform Reports</h1>
      </div>
    </header>

    <main>
      <h2>Platform Data Report</h2>
      <table>
        <thead>
          <tr>
            <th>Platform No</th>
            <th>Train No</th>
            <th>Arrival</th>
            <th>Departure</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% platforms.forEach(platform => { %>
          <tr>
            <td><%= platform.platform_no %></td>
            <td><%= platform.train_no %></td>
            <td><%= platform.arrival %></td>
            <td><%= platform.departure %></td>
            <td><%= platform.status %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </main>

    <footer>
      <p>
        Â© 2025 Railway Management System - Platform Reports. All rights
        reserved.
      </p>
    </footer>
  </body>
</html>
